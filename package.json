{
	"name": "svelte-rs",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"server": "cargo run",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:all": "cargo test && bun spec:get && vitest --run",
		"spec": "cargo set-version --bump patch --package server && cargo test test_load_spec && bun spec:get && vitest spec --run",
		"spec:get": "openapi-ts -i spec.yml -o src/lib/client -c @hey-api/client-fetch",
		"migrate": "sqlx migrate",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"@hey-api/client-fetch": "^0.8.1",
		"@hey-api/openapi-ts": "^0.64.6",
		"@modyfi/vite-plugin-yaml": "^1.1.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	}
}
